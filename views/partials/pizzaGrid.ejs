<div class="grid">
  <% posts.forEach(post => { %>
  <div class="grid-item">
    <img src="<%= post.image %> " alt="" />
    <div class="post-footer">
    <h6><%= post.title %></h6>
    <div><h5>🍕 : <%= post.likes %></h5></div>
    </div>
  </div>
  <% }) %>
</div>

<!-- if the user hasn't posted anything then yell at them -->
<% if(posts.length < 1) { %>
<p>you haven't posted anything yet!</p>
<% } %>

